#!/bin/sh
#
# Compare data in two work directories
# Usage: diff_ww3.sh dir1 dir2
#
if [ ! $# = 2 ]
then
  echo "Usage: wdiff.sh dir1 dir2"
  exit 1
fi
dir1=$1
dir2=$2

if [ ! -d $dir1 ]
then
  echo "$dir1 not found"
  exit 1
fi
if [ ! -d $dir1 ]
then
  echo "$dir1 not found"
  exit 1
fi

files=""
files="ww3_grid.out $files"
files="ww3_prep.out $files"
files="ww3_strt.out $files"
files="ww3_outf.out $files"
files="ww3_outp.out $files"
files="restart.ww3 $files"
files="log.ww3 $files"
files="test.ww3 $files"
files="out_grd.ww3 $files"
files="out_pnt.ww3 $files"
files="tab50.ww3 $files"

for f in $files
do
  if [ -f $dir1/$f -a -f $dir2/$f ]
  then
    echo "Diff $f"
    diff --brief $dir1/$f $dir2/$f
  else
    echo "Skip $f"
  fi
done

