#!/bin/sh
#############################################################################
#                                                                           #
# ww3_tp2.2 Test script for WW-III, two-dimensional propagation.            #
#           Propagation over half the globe.                                #
#                                                                           #
# Model should be compiled with the switches :                              #
#                                                                           #
#   !/LN0 !/ST0 !/NL0 !/BT0 !/DB0 !/TR0 !/BS0 !/XX0                         #
#                        Select the 'no source terms' option.               #
#   !/PRn                Selecting one of the propagation schemes.          #
#                         1: First order.                                   #
#                         2: UQ with diffusion term.                        #
#                         3: UQ with averaging (set to zero here).          #
#   !/WNX1 !/WNT1 !/CRX1 !/CRT1      Wind and current interpolation.        #
#   !/O0 !/O1 !/O2 !/O3 !/O4 !/O5 !/O6 !/O7   Sdt out output options.       #
#                                                                           #
# Remarks :                                                                 #
# - Check the shell script variable 'grads' and section 4.b to generate     #
#   graphical output using GrADS.                                           #
# - Select tuning options in namelist input ww3_grid.                       #
# - Check options in section 0.a.                                           #
#                                                                           #
#                                              Hendrik Tolman, Jun 2002     #
#                                                   Last Mod : Dec 2010     #
#                                                                           #
#    Copyright 2009 National Weather Service (NWS),                         #
#       National Oceanic and Atmospheric Administration.  All rights        #
#       reserved.  WAVEWATCH III is a trademark of the NWS.                 #
#       No unauthorized use without permission.                             #
#                                                                           #
#############################################################################

# 0. Preparations -----------------------------------------------------------

  ww3_env='.wwatch3.env'   # setup file

# 0.a Set-up variables

  cd
  if [ -f $ww3_env ]
  then
    set `grep WWATCH3_DIR $ww3_env` ; shift
    main_dir="$*"
    set `grep WWATCH3_TMP $ww3_env` ; shift
    temp_dir="$*"
  else
    echo "*** Set-up file $ww3_env not found ***"
    exit
  fi

  path_w="$temp_dir"              # work directory
  path_e="$main_dir/exe"          # path for executables
  path_a="$main_dir/aux"          # path for gs scripts
  path_o="$main_dir/test"         # path for output files
# path_o="$main_dir/work"

  out_only='no '                  # Skip running the program
  run_only='no '                  # Skip preprocessing

  grads='yes'                     # Run GrADS for graphics
                                  # make sure you set up properly !!

# 0.b Clean-up

  rm -f $path_o/ww3_????.out
  rm -f $path_o/gx_????.out
  rm -f $path_o/log.ww3
  rm -f $path_o/test.ww3
  rm -f $path_o/tab??.ww3
  rm -f $path_o/*.eps

  cd $path_w
  rm -f core
  rm -f *.gs

  echo ' ' ; echo ' '
  echo '                  ======> TEST RUN WAVEWATCH III <====== '
  echo '                    ==================================   '
  echo '                                   propagation test'
  echo '                                   2-D propagation around globe'
  echo ' '

if [ "$out_only" != 'yes' ]
then

  if [ "$run_only" != 'yes' ]
  then

    rm -f *.ww3

# 1. Grid pre-processor -----------------------------------------------------

    echo ' '
    echo '+--------------------+'
    echo '|  Grid preprocessor |'
    echo '+--------------------+'
    echo ' '

cat > ww3_grid.inp << EOF
$ WAVEWATCH III Grid preprocessor input file
$ ------------------------------------------
  '2-D PROPAGATION AROUND GLOBE  '
$
   1.1 0.03679  3  24  0.
$
   F T T T F F
  2200.  2200. 2200.  2200.
$
$ &PRO2 DTIME = 0. /
  &PRO2 DTIME = 345600. /
  &PRO3 WDTHCG = 0., WDTHTH = 0. /
  &PRO4 RNFAC = 0., RSFAC = 0. /
END OF NAMELISTS
$
  'RECT' T 'NONE'
  193   93
    1.   1.  1.
   -6. -46.  1.
$
  -5. 5.75  10  -2500. 2 1 '(....)' 'UNIT' 'input'
$
   17949*1
$
  10  1 1 '(....)' 'PART' 'input'
$
   0  0  F
   0  0  F
   0  0
$
   0. 0. 0. 0.  0
EOF

    echo "   Screen ouput routed to $path_o/ww3_grid.out"
    $path_e/ww3_grid > $path_o/ww3_grid.out

    rm -f ww3_grid.inp

# 2. Initial conditions -----------------------------------------------------

    echo ' '
    echo '+--------------------+'
    echo '| Initial conditions |'
    echo '+--------------------+'
    echo ' '

cat > ww3_strt.inp << EOF
$ WAVEWATCH III Initial conditions input file
$ -------------------------------------------
  1
   0.040469  0.0001 270. 8  0. 1.  0. 1. 2.5
EOF

    echo "   Screen ouput routed to $path_o/ww3_strt.out"
    $path_e/ww3_strt > $path_o/ww3_strt.out

    rm -f ww3_strt.inp

fi

# 3. Main program -----------------------------------------------------------

  echo ' '
  echo '+--------------------+'
  echo '|    Main program    |'
  echo '+--------------------+'
  echo ' '

cat > ww3_shel.inp << EOF
$ WAVEWATCH III shell input file
$ ------------------------------
   F T
   F T
   F T
   F
   F
   F
   F
$
   19680606 000000
   19680618 000000
$
   1
$
   19680606 000000  86400  19680618 000000
     F F F F F  T F F T T  F F F F F  F F F F F  F F F F F  F F F F F  F
   19680606 000000  21600  19680618 000000
     0.0   0.0   'LEFT      '
    90.0   0.0   'CENTER    '
   180.0   0.0   'RIGHT     '
     0.0   0.0   'STOPSTRING'
   19680612 000000      0  19680612 000000
   19680612 000000      0  19680612 000000
   19680612 000000      0  19680612 000000
   19680612 000000      0  19680612 000000
EOF

  $path_e/ww3_shel
# mpirun -np 6 $path_e/ww3_shel 

  rm -f ww3_shel.inp

  echo ' ' ; echo "   Output file log.ww3 routed to $path_o"
  mv log.ww3 $path_o/.
  if [ -f test.ww3 ]
  then
    echo "   Output file test.ww3 routed to $path_o"
    mv test.ww3 $path_o/.
  fi

fi

# 4. Gridded output ---------------------------------------------------------

  echo ' '
  echo '+--------------------+'
  echo '|   Gridded output   |'
  echo '+--------------------+'
  echo ' '

cat > ww3_outf.inp << EOF
$ WAVEWATCH III Grid output post-processing
$ -----------------------------------------
  19680612 000000 518400. 2
$
  F F F F F  T F F T T  F F F F F  F F F F F  F F F F F F  F F F F F  F
$
  1 0
$
  1 193 1 1 93 1 T F F
EOF

  echo "   Screen ouput routed to $path_o/ww3_outf.out"
  $path_e/ww3_outf > $path_o/ww3_outf.out

  rm -f ww3_outf.inp

  if [ "$grads" = 'yes' ]
  then

cat > gx_outf.inp << EOF
$ WAVEWATCH III Grid output post-processing (GrADS)
$ -------------------------------------------------
  19680606 000000 43200. 25
$
  F F F F F  T F F T F  F F F F F  F F F F F  F F F F F F  F F F F F  F
$
  1 193 1 93  T T
EOF

    echo ' '
    echo "   Screen output routed to $path_o/gx_outf.out"
    $path_e/gx_outf > $path_o/gx_outf.out

    rm -f gx_outf.inp

    ln -s $path_a/colorset.gs .
    ln -s $path_a/cbarn.gs .
    ln -s $path_a/map2_2.gs   .

# Set up GrADS properly here if necessary !!!

#   export PATH=${PATH}:/u/wx20mf/grads/bin:
#   export GADDIR=/u/wx20mf/grads/dat
#   export GASCRP=/u/wx20mf/grads/gslib
#   export DISPLAY=frisian:0

    grads -blc "run map2_2"

    gxeps -c -i plot.grads -o $path_o/plot.eps

    rm -f *.gs
    rm -f ww3.grads ww3.ctl plot.grads

  fi

# 5. Point output -----------------------------------------------------------

  echo ' '
  echo '+--------------------+'
  echo '|    Point output    |'
  echo '+--------------------+'

  echo ' '
  echo '   Tables of mean wave parameters'
  echo '   ------------------------------'

cat > ww3_outp.inp << EOF
$ WAVEWATCH III Point output post-processing
$ ------------------------------------------
  19680606 000000 43200. 25
$
  1
 -1
$
  2
$
  2  51
EOF

  echo "   Screen ouput routed to $path_o/ww3_op_1.out"

  $path_e/ww3_outp > $path_o/ww3_op_1.out

  echo "   Table file tab51.ww3 routed to $path_o"
  mv tab51.ww3 $path_o

  rm -f ww3_outp.inp

cat > ww3_outp.inp << EOF
$ WAVEWATCH III Point output post-processing
$ ------------------------------------------
  19680606 000000 43200. 25
$
  2
 -1
$
  2
$
  2  52
EOF

  echo "   Screen ouput routed to $path_o/ww3_op_2.out"

  $path_e/ww3_outp > $path_o/ww3_op_2.out

  echo "   Table file tab52.ww3 routed to $path_o"
  mv tab52.ww3 $path_o

  rm -f ww3_outp.inp

cat > ww3_outp.inp << EOF
$ WAVEWATCH III Point output post-processing
$ ------------------------------------------
  19680606 000000 43200. 25
$
  3
 -1
$
  2
$
  2  53
EOF

  echo "   Screen ouput routed to $path_o/ww3_op_3.out"

  $path_e/ww3_outp > $path_o/ww3_op_3.out

  echo "   Table file tab53.ww3 routed to $path_o"
  mv tab53.ww3 $path_o

  rm -f ww3_outp.inp

  echo ' '
  echo '   Print plots of spectra'
  echo '   ----------------------'

cat > ww3_outp.inp << EOF
$ WAVEWATCH III Point output post-processing
$ ------------------------------------------
  19680606 000000 43200. 25
$
  1
  2
  3
 -1
$
  1
  1  -1.  0.  33   F
EOF

  echo "   Screen ouput routed to $path_o/ww3_op_4.out"

  $path_e/ww3_outp > $path_o/ww3_op_4.out

  rm -f ww3_outp.inp

# 6. End, cleaning up -------------------------------------------------------

# rm -f restart.ww3

  echo ' ' ; echo ' ' ; echo "Files in `pwd` :" ; echo ' '
  ls -l *.ww3

  echo ' ' ; echo "Files in $path_o :" ; echo ' '
  cd $path_o
  ls -l ww3_????.out
  if [ "$grads" = 'yes' ]
  then
    ls -l gx_outf.out
  fi
  ls -l *.ww3
  if [ "$grads" = 'yes' ]
  then
    ls -l *.eps
  fi

  echo ' ' ; echo ' '
  echo '                  ======>  END OF WAVEWATCH III  <====== '
  echo '                    ==================================   '
  echo ' '

# End of ww3_tp2.2 ----------------------------------------------------------
