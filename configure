#!/bin/csh

if ($#argv == 1) then
  set MACHINE=$1
else if ($#argv == 0) then
  echo "Warning: assuming on jet machine"
  set MACHINE=jet
else
  echo "Usage: $0 machine"
  echo "Install compile WW3 on this machine"
  echo "Example: $0 jet"
  exit 1
endif

# check compiler for WW3 util 
if ( $MACHINE == wcosscray ) then
  set F77=ftn
else
  set F77=ifort
endif

echo "MACHINE: ${MACHINE}"
echo "F77 for WW3 util: ${F77}"

# Make a build dir and go to the actual build dir 
mkdir -p build
cd build
rm -f svn
ln -sf .. svn

set WW3_DIR=`pwd`

#Preapare wwatch3.env
cat > wwatch3.env << EOF 
WWATCH3_LPR      printer
WWATCH3_F77      ${F77} 
WWATCH3_CC       cc
WWATCH3_DIR      ${WW3_DIR}
WWATCH3_TMP      ${WW3_DIR}/tmp
WWATCH3_SOURCE   yes
WWATCH3_LIST     yes
EOF

